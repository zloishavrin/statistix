#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

process_lint_staged() {
  local service_direction=$1
  local service_name=$2

  echo "ðŸš€ Running pre-commit for $service_name..."

  cd "$service_direction"
  npm install
  npx lint-staged
  git add .
  cd -

  echo "âœ… $service_name pre-commit completed"
}

process_lint_staged "services/service_authentification" "Authentification service"

git add .